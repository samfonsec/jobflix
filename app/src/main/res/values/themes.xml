<resources>
    <!-- Base application theme. -->
    <style name="Theme.Jobflix" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:windowBackground">@color/primaryColor</item>
        <item name="colorControlNormal">@color/secondaryColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Theme.Jobflix.TransparentStatusBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Widget.Jobflix.FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">@color/secondaryColorAlpha</item>
        <item name="android:layout_margin">@dimen/default_dimen</item>
        <item name="borderWidth">0dp</item>
        <item name="rippleColor">?colorPrimary</item>
        <item name="fabSize">mini</item>
    </style>

</resources>