<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Jobflix.FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">@color/secondaryColorAlpha</item>
        <item name="borderWidth">0dp</item>
        <item name="rippleColor">?colorPrimary</item>
        <item name="fabSize">mini</item>
    </style>

    <style name="Widget.Jobflix.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_state_color</item>
        <item name="itemTextColor">@color/bottom_nav_state_color</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="Widget.Jobflix.SimpleDraweeeView" parent="">
        <item name="progressBarAutoRotateInterval">1500</item>
        <item name="roundedCornerRadius">@dimen/x_small_dimen</item>
    </style>

    <style name="Widget.Jobflix.SimpleDraweeeView.Serie">
        <item name="failureImage">@drawable/ic_movie_creation</item>
        <item name="progressBarImage">@drawable/ic_movie_creation</item>
    </style>

    <style name="Widget.Jobflix.SimpleDraweeeView.People">
        <item name="failureImage">@drawable/ic_face</item>
        <item name="progressBarImage">@drawable/ic_face</item>
    </style>

    <style name="Widget.Jobflix.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_state_color</item>
        <item name="strokeColor">@color/button_state_color</item>
        <item name="cornerRadius">@dimen/small_dimen</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/secondaryDarkColor</item>
    </style>

    <style name="Widget.Jobflix.TextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintEnabled">false</item>
        <item name="boxStrokeErrorColor">@color/errorColor</item>
        <item name="errorTextColor">@color/errorColor</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeColor">@android:color/white</item>
    </style>

    <style name="Widget.Jobflix.EditText.Pin" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:maxLength">4</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="theme">@style/ThemeOverlay.Jobflix.Cursor</item>
    </style>

    <style name="ThemeOverlay.Jobflix.Cursor" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@android:color/white</item>
    </style>

</resources>